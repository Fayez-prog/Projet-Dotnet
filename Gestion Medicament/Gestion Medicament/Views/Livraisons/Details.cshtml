@model Gestion_Medicament.Models.Livraison

@{
    ViewData["Title"] = "Détails de la livraison";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-4">Détails de la livraison</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Numero" class="btn btn-warning">
            <i class="fas fa-edit"></i> Modifier
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header bg-primary text-white py-3">
        <h5 class="m-0 font-weight-bold">Informations générales</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Numéro de livraison</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Numero)</dd>

            <dt class="col-sm-3">Fournisseur</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Fournisseur)</dd>

            <dt class="col-sm-3">Date de livraison</dt>
            <dd class="col-sm-9">@Model.DateLiv.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">Montant total</dt>
            <dd class="col-sm-9">@Model.Total.ToString("C")</dd>
        </dl>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header bg-success text-white py-3">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="m-0 font-weight-bold">Lignes de livraison</h5>
            <span class="badge badge-light">@Model.Lignes.Count() articles</span>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover" id="lignesTable">
                <thead class="thead-dark">
                    <tr>
                        <th>Référence</th>
                        <th>Description</th>
                        <th class="text-right">Quantité</th>
                        <th class="text-right">Prix unitaire</th>
                        <th class="text-right">Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ligne in Model.Lignes)
                    {
                        <tr>
                            <td>@ligne.RefMed</td>
                            <td>@ligne.Description</td>
                            <td class="text-right">@ligne.Quantite</td>
                            <td class="text-right">@(ligne.Medicament?.Prix.ToString("C") ?? "N/A")</td>
                            <td class="text-right">@((ligne.Quantite * (ligne.Medicament?.Prix ?? 0)).ToString("C"))</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#lignesTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.21/i18n/French.json"
                },
                "order": [[0, "asc"]],
                "pageLength": 10
            });
        });
    </script>
}