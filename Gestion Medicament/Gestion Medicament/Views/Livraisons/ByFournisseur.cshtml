@model IEnumerable<Gestion_Medicament.Models.Livraison>

@{
    ViewData["Title"] = "Livraisons par fournisseur";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-truck mr-2"></i>Livraisons pour le fournisseur : @ViewBag.Fournisseur</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left mr-1"></i> Retour à la liste
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center bg-primary text-white">
        <h6 class="m-0 font-weight-bold">Résultats de la recherche</h6>
        <span class="badge badge-light">@Model.Count() livraison(s) trouvée(s)</span>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Numéro</th>
                            <th>Fournisseur</th>
                            <th>Date</th>
                            <th class="text-right">Total</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Numero)</td>
                                <td>@Html.DisplayFor(modelItem => item.Fournisseur)</td>
                                <td>@item.DateLiv.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-right">@Html.DisplayFor(modelItem => item.Total) €</td>
                                <td class="text-nowrap">
                                    <a asp-action="Details" asp-route-id="@item.Numero" class="btn btn-info btn-sm" title="Détails">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Numero" class="btn btn-warning btn-sm" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Numero" class="btn btn-danger btn-sm" title="Supprimer">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="font-weight-bold">
                            <td colspan="3" class="text-right">Total général :</td>
                            <td class="text-right">@Model.Sum(l => l.Total).ToString("N2") €</td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-warning text-center">
                <i class="fas fa-exclamation-circle mr-2"></i>Aucune livraison trouvée pour ce fournisseur.
            </div>
        }
    </div>
</div>

<div class="card shadow mt-4">
    <div class="card-header py-3 bg-info text-white">
        <h6 class="m-0 font-weight-bold"><i class="fas fa-search mr-2"></i>Nouvelle recherche</h6>
    </div>
    <div class="card-body">
        <form asp-action="ByFournisseur" method="get" class="form-inline">
            <div class="form-group mx-sm-3 mb-2">
                <label for="fournisseur" class="sr-only">Fournisseur</label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-building"></i></span>
                    </div>
                    <input type="text" name="fournisseur" class="form-control"
                           placeholder="Entrez un fournisseur" value="@ViewBag.Fournisseur"
                           required aria-required="true" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary mb-2">
                <i class="fas fa-search mr-1"></i> Rechercher
            </button>
        </form>
    </div>
</div>