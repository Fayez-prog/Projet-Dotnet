@model IEnumerable<Gestion_Medicament.Models.Livraison>

@{
    ViewData["Title"] = "Liste des Livraisons";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-truck-loading mr-2"></i>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus mr-1"></i> Nouvelle livraison
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center bg-primary text-white">
        <h6 class="m-0 font-weight-bold"><i class="fas fa-list mr-2"></i>Toutes les livraisons</h6>
        <span class="badge badge-light">@Model.Count() livraison(s)</span>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>Numéro</th>
                            <th>Fournisseur</th>
                            <th>Date</th>
                            <th class="text-right">Total</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Numero)</td>
                                <td>@Html.DisplayFor(modelItem => item.Fournisseur)</td>
                                <td>@item.DateLiv.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-right">@Html.DisplayFor(modelItem => item.Total) €</td>
                                <td class="text-nowrap">
                                    <a asp-action="Details" asp-route-id="@item.Numero" class="btn btn-info btn-sm" title="Détails">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Numero" class="btn btn-warning btn-sm" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Numero" class="btn btn-danger btn-sm" title="Supprimer">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="font-weight-bold">
                            <td colspan="3" class="text-right">Total général :</td>
                            <td class="text-right">@Model.Sum(l => l.Total).ToString("N2") €</td>
                            <td colspan="2"></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle mr-2"></i>Aucune livraison enregistrée pour le moment.
            </div>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3 bg-info text-white">
                <h6 class="m-0 font-weight-bold"><i class="fas fa-search mr-2"></i>Recherche par fournisseur</h6>
            </div>
            <div class="card-body">
                <form asp-action="ByFournisseur" method="get">
                    <div class="form-group">
                        <label for="fournisseur" class="font-weight-bold">Fournisseur</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-building"></i></span>
                            </div>
                            <input type="text" name="fournisseur" class="form-control"
                                   placeholder="Entrez un nom de fournisseur" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search mr-1"></i> Rechercher
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3 bg-success text-white">
                <h6 class="m-0 font-weight-bold"><i class="fas fa-chart-bar mr-2"></i>Statistiques</h6>
            </div>
            <div class="card-body">
                <form asp-action="Stats" method="get">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="startDate" class="font-weight-bold">Date de début</label>
                            <input type="date" name="startDate" class="form-control"
                                   value="@DateTime.Now.AddMonths(-1).ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="form-group col-md-6">
                            <label for="endDate" class="font-weight-bold">Date de fin</label>
                            <input type="date" name="endDate" class="form-control"
                                   value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-calculator mr-1"></i> Calculer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.10.25/i18n/French.json'
                },
                order: [[2, 'desc']],
                responsive: true
            });
        });
    </script>
}
