@model Gestion_Medicament.Models.Livraison

@{
    ViewData["Title"] = "Supprimer la livraison";
}

<div class="card shadow border-danger">
    <div class="card-header bg-danger text-white">
        <h2 class="mb-0">
            <i class="fas fa-exclamation-triangle"></i> @ViewData["Title"]
        </h2>
    </div>
    <div class="card-body">
        <h3 class="text-danger">Êtes-vous sûr de vouloir supprimer ce médicament ?</h3>
        <p class="text-muted">Cette action est irréversible et supprimera toutes les données associées.</p>

        <div class="alert alert-warning">
            <h5 class="alert-heading">Détails du livraison</h5>
            <hr>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Numero)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Numero)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Fournisseur)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Fournisseur)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DateLiv)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateLiv)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Total)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Total) €
                </dd>
            </dl>
      </div>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Numero" />
            <button type="submit" class="btn btn-danger mr-2">
                <i class="fas fa-trash-alt"></i> Confirmer la suppression
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-times"></i> Annuler
            </a>
        </form>
    </div>
</div>
