@model Gestion_Medicament.Models.Medicament

@{
    ViewData["Title"] = "Supprimer le médicament";
}

<div class="card shadow border-danger">
    <div class="card-header bg-danger text-white">
        <h2 class="mb-0">
            <i class="fas fa-exclamation-triangle"></i> @ViewData["Title"]
        </h2>
    </div>
    <div class="card-body">
        <h3 class="text-danger">Êtes-vous sûr de vouloir supprimer ce médicament ?</h3>
        <p class="text-muted">Cette action est irréversible et supprimera toutes les données associées.</p>

        <div class="alert alert-warning">
            <h5 class="alert-heading">Détails du médicament</h5>
            <hr>
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Reference)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Reference)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Description)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Quantite)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Quantite) unités</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Prix)</dt>
                <dd class="col-sm-9">@Model.Prix.ToString("C2")</dd>

                <dt class="col-sm-3">Valeur du stock</dt>
                <dd class="col-sm-9">@((Model.Quantite * Model.Prix).ToString("C2"))</dd>
            </dl>
        </div>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Reference" />
            <button type="submit" class="btn btn-danger mr-2">
                <i class="fas fa-trash-alt"></i> Confirmer la suppression
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-times"></i> Annuler
            </a>
        </form>
    </div>
</div>