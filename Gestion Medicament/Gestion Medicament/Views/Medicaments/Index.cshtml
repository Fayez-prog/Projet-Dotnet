@model IEnumerable<Gestion_Medicament.Models.Medicament>

@{
    ViewData["Title"] = "Liste des Médicaments";
}

<div class="card shadow mb-4">
    <div class="card-header bg-primary text-white py-3">
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="mb-0">
                <i class="fas fa-pills"></i> @ViewData["Title"]
            </h2>
            <div>
                <a asp-action="Create" class="btn btn-light">
                    <i class="fas fa-plus"></i> Nouveau
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-between mb-4">
            <div class="btn-group" role="group">
                <a asp-action="LowStock" class="btn btn-warning">
                    <i class="fas fa-exclamation-triangle"></i> Stocks faibles
                </a>
                <a asp-action="StockValue" class="btn btn-info ml-2">
                    <i class="fas fa-euro-sign"></i> Valeur du stock
                </a>
            </div>
        </div> <!-- Fermeture manquante de cette div -->

        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["ReferenceSortParm"]">
                                @Html.DisplayNameFor(model => model.Reference)
                                <i class="fas fa-sort"></i>
                            </a>
                        </th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["QuantiteSortParm"]">
                                Stock
                                <i class="fas fa-sort"></i>
                            </a>
                        </th>
                        <th>
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["PrixSortParm"]">
                                @Html.DisplayNameFor(model => model.Prix)
                                <i class="fas fa-sort"></i>
                            </a>
                        </th>
                        <th>Valeur</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Reference)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td class="@(item.Quantite < 10 ? "text-danger font-weight-bold" : "")">
                                @Html.DisplayFor(modelItem => item.Quantite)
                                @if (item.Quantite < 5)
                                {
                                    <span class="badge badge-danger ml-2">CRITIQUE</span>
                                }
                                else if (item.Quantite < 10)
                                {
                                    <span class="badge badge-warning ml-2">FAIBLE</span>
                                }
                            </td>
                            <td>@item.Prix.ToString("C2")</td>
                            <td>@((item.Quantite * item.Prix).ToString("C2"))</td>
                            <td nowrap>
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Reference" class="btn btn-outline-primary" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Reference" class="btn btn-outline-info" title="Détails">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Reference" class="btn btn-outline-danger" title="Supprimer">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer text-muted">
        <div class="d-flex justify-content-between">
            <div>
                Total: <strong>@Model.Count()</strong> médicaments
            </div>
            <div>
                Valeur totale: <strong>@Model.Sum(m => m.Quantite * m.Prix).ToString("C2")</strong>
            </div>
        </div>
    </div>
</div>