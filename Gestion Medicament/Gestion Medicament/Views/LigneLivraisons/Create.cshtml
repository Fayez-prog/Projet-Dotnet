@model Gestion_Medicament.Models.LigneLivraison

@{
    ViewData["Title"] = "Créer une nouvelle ligne de livraison";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h2><i class="fas fa-plus-circle me-2"></i>@ViewData["Title"]</h2>
        </div>
        <div class="card-body">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="RefMed" class="form-select" asp-items="ViewBag.RefMed" required>
                                <option value="">-- Sélectionnez --</option>
                            </select>
                            <label asp-for="RefMed">Médicament</label>
                            <span asp-validation-for="RefMed" class="invalid-feedback"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating">
                            <select asp-for="NumLiv" class="form-select" asp-items="ViewBag.NumLiv" required>
                                <option value="">-- Sélectionnez --</option>
                            </select>
                            <label asp-for="NumLiv">Numéro de livraison</label>
                            <span asp-validation-for="NumLiv" class="invalid-feedback"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-floating">
                            <input asp-for="Quantite" class="form-control" placeholder=" " required min="1" />
                            <label asp-for="Quantite">Quantité</label>
                            <span asp-validation-for="Quantite" class="invalid-feedback"></span>
                        </div>
                    </div>

                    <div class="col-md-8">
                        <div class="form-floating">
                            <input asp-for="Description" class="form-control" placeholder=" " />
                            <label asp-for="Description">Description (optionnelle)</label>
                            <span asp-validation-for="Description" class="invalid-feedback"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Retour
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check me-1"></i> Valider
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Validation côté client
            $('form').on('submit', function(e) {
                if (!this.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                this.classList.add('was-validated');
            });
        });
    </script>
}