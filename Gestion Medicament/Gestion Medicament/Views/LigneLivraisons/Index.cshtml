@model IEnumerable<Gestion_Medicament.Models.LigneLivraison>

@{
    ViewData["Title"] = "Liste des Lignes de Livraison";
}

<div class="container-fluid mt-4">
    <div class="card shadow mb-4">
        <div class="card-header bg-dark text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0"><i class="fas fa-list-ol me-2"></i>@ViewData["Title"]</h2>
                <div class="d-flex">
                    <a asp-action="Create" class="btn btn-success ms-2">
                        <i class="fas fa-plus me-1"></i> Nouvelle Ligne
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Médicament</th>
                            <th>Livraison</th>
                            <th>Quantité</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                <td>@Html.DisplayFor(modelItem => item.Medicament.Description)</td>
                                <td>@Html.DisplayFor(modelItem => item.Livraison.Numero)</td>
                                <td>@Html.DisplayFor(modelItem => item.Quantite)</td>
                                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
