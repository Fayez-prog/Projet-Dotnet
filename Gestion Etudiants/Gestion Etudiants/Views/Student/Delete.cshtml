@model Gestion_Etudiants.Models.Student

@{
    ViewData["Title"] = "Supprimer un Étudiant";
}

<div class="card shadow">
    <div class="card-header bg-danger text-white">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <h4 class="text-danger">Êtes-vous sûr de vouloir supprimer cet étudiant ?</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.StudentName)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.StudentName)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Age)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Age)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.BirthDate)</dt>
            <dd class="col-sm-9">@Model.BirthDate.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.School)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.School.SchoolName)</dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="StudentId" />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-2"></i>Supprimer
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                </a>
            </div>
        </form>
    </div>
</div>