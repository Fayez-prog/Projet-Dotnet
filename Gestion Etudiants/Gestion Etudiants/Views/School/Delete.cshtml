@model Gestion_Etudiants.Models.School

@{
    ViewData["Title"] = "Supprimer l'établissement";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
        <a asp-action="Index" class="btn btn-secondary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-arrow-left"></i>
            </span>
            <span class="text">Retour à la liste</span>
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-danger text-white">
            <h6 class="m-0 font-weight-bold">Confirmation de suppression</h6>
        </div>
        <div class="card-body">
            <h5 class="text-danger font-weight-bold">
                <i class="fas fa-exclamation-triangle"></i> Attention : Cette action est irréversible
            </h5>
            <hr />

            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.SchoolName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SchoolName)</dd>

                <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.SchoolAdress)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SchoolAdress)</dd>

                <dt class="col-sm-3 font-weight-bold">Nombre d'étudiants</dt>
                <dd class="col-sm-9">@ViewBag.StudentCount</dd>
            </dl>

            @if (ViewBag.StudentCount > 0)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <h5><i class="fas fa-exclamation-triangle"></i> Attention !</h5>
                    <p>
                        Cet établissement contient @ViewBag.StudentCount étudiant(s).
                        La suppression entraînera également la suppression de tous ses étudiants.
                    </p>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <form asp-action="Delete" id="deleteForm">
                <input type="hidden" asp-for="SchoolID" />
                <div class="form-group">
                    <button type="button" class="btn btn-danger btn-icon-split" data-toggle="modal" data-target="#confirmDeleteModal">
                        <span class="icon text-white-50">
                            <i class="fas fa-trash-alt"></i>
                        </span>
                        <span class="text">Confirmer la suppression</span>
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-times"></i>
                        </span>
                        <span class="text">Annuler</span>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmer la suppression</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Êtes-vous absolument sûr de vouloir supprimer cet établissement ?
                @if (ViewBag.StudentCount > 0)
                {
                    <div class="alert alert-warning mt-3">
                        <i class="fas fa-exclamation-triangle"></i>
                        Cela supprimera également les @ViewBag.StudentCount étudiant(s) associés.
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
                <button type="button" class="btn btn-danger" onclick="document.getElementById('deleteForm').submit();">
                    <i class="fas fa-trash-alt"></i> Confirmer la suppression
                </button>
            </div>
        </div>
    </div>
</div>