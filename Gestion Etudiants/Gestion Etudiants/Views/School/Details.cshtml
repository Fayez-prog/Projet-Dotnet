@model Gestion_Etudiants.Models.School

@{
    ViewData["Title"] = "Détails de l'établissement";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
        <a asp-action="Index" class="btn btn-secondary btn-icon-split">
            <span class="icon text-white-50">
                <i class="fas fa-arrow-left"></i>
            </span>
            <span class="text">Retour à la liste</span>
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-primary text-white">
            <h6 class="m-0 font-weight-bold">Informations de l'établissement</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 font-weight-bold">@Html.DisplayNameFor(model => model.SchoolName)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.SchoolName)</dd>

                        <dt class="col-sm-4 font-weight-bold">@Html.DisplayNameFor(model => model.SchoolAdress)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.SchoolAdress)</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4 font-weight-bold">Nombre d'étudiants</dt>
                        <dd class="col-sm-8">@ViewBag.StudentCount</dd>

                        <dt class="col-sm-4 font-weight-bold">Âge moyen</dt>
                        <dd class="col-sm-8">
                            @if (ViewBag.StudentCount > 0)
                            {
                                @ViewBag.AverageAge.ToString("0.00")
                            }
                            else
                            {
                                <span class="text-muted">Aucun étudiant</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.SchoolID" class="btn btn-warning btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-edit"></i>
                </span>
                <span class="text">Modifier</span>
            </a>
            <a asp-action="Index" class="btn btn-secondary btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-arrow-left"></i>
                </span>
                <span class="text">Retour à la liste</span>
            </a>
        </div>
    </div>

    <!-- Student List Section -->
    @if (ViewBag.StudentCount > 0)
    {
        <div class="card shadow mb-4">
            <div class="card-header py-3 bg-info text-white">
                <h6 class="m-0 font-weight-bold">Liste des étudiants (@ViewBag.StudentCount)</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Prénom</th>
                                <th>Âge</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- You would need to pass students data from controller -->
                            @* @foreach (var student in Model.Students) *@
                            @* { *@
                            @*     <tr> *@
                            @*         <td>@student.LastName</td> *@
                            @*         <td>@student.FirstName</td> *@
                            @*         <td>@student.Age</td> *@
                            @*         <td>@student.Email</td> *@
                            @*     </tr> *@
                            @* } *@
                            <tr>
                                <td colspan="4" class="text-center">Fonctionnalité à implémenter</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>