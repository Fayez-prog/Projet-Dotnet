@model Gestion_Clientele.Models.DemandeReparation

@{
    ViewData["Title"] = "Supprimer la demande";
}

<h3>Êtes-vous sûr de vouloir supprimer cet appareil ?</h3>
<div>
    <h4>Détails de l'appareil</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateDepotAppareil)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateDepotAppareil)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatePrevueRep)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatePrevueRep)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Etat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Etat)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SymptomesPanne)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SymptomesPanne)
        </dd>

        <dt class="col-sm-2">
            Client associé
        </dt>
        <dd class="col-sm-10">
            @if (Model.Client != null)
            {
                @Html.DisplayFor(model => model.Client.Nom)
            }
            else
            {
                <span class="text-muted">Aucun client assigné</span>
            }
        </dd>

        <dt class="col-sm-2">
            Client associé
        </dt>
        <dd class="col-sm-10">
            @if (Model.Appareil != null)
            {
                @Html.DisplayFor(model => model.Appareil.Name)
            }
            else
            {
                <span class="text-muted">Aucun Appareil assigné</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Confirmer la suppression
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}