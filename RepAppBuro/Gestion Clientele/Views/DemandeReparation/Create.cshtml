@model Gestion_Clientele.Models.DemandeReparation

@{
    ViewData["Title"] = "Nouvelle demande de réparation";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3><i class="bi bi-plus-circle"></i> @ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="DateDepotAppareil" class="form-label"></label>
                                <input asp-for="DateDepotAppareil" class="form-control" type="date" />
                                <span asp-validation-for="DateDepotAppareil" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DatePrevueRep" class="form-label"></label>
                                <input asp-for="DatePrevueRep" class="form-control" type="date" />
                                <span asp-validation-for="DatePrevueRep" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Etat" class="form-label"></label>
                                <select asp-for="Etat" class="form-select">
                                    <option value="En attente">En attente</option>
                                    <option value="En cours">En cours</option>
                                    <option value="Terminée">Terminée</option>
                                    <option value="Annulée">Annulée</option>
                                </select>
                                <span asp-validation-for="Etat" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ClientId" class="form-label">Client</label>
                                <select asp-for="ClientId" class="form-select" asp-items="ViewBag.Clients">
                                    <option value="">-- Sélectionner un client --</option>
                                </select>
                                <span asp-validation-for="ClientId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="AppareilId" class="form-label">Appareil</label>
                                <select asp-for="AppareilId" class="form-select" asp-items="ViewBag.Appareils">
                                    <option value="">-- Sélectionner un appareil --</option>
                                </select>
                                <span asp-validation-for="AppareilId" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="SymptomesPanne" class="form-label"></label>
                                <textarea asp-for="SymptomesPanne" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="SymptomesPanne" class="text-danger"></span>
                            </div>

                            <div class="col-12 mt-4">
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-circle"></i> Enregistrer
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Annuler
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            $('#ClientId').change(function() {
                var clientId = $(this).val();
                $.getJSON('/DemandeReparation/GetAppareilsByClient', { clientId: clientId }, function(data) {
                    var items = '<option value="">-- Sélectionner un appareil --</option>';
                    $.each(data, function(i, appareil) {
                        items += '<option value="' + appareil.value + '">' + appareil.text + '</option>';
                    });
                    $('#AppareilId').html(items);
                });
            });
        });
    </script>
}
