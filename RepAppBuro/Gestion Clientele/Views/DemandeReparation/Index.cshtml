@model IEnumerable<Gestion_Clientele.Models.DemandeReparation>

@{
    ViewData["Title"] = "Liste des Demandes de Réparation";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-tools"></i> @ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouvelle demande
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Date dépôt</th>
                            <th>Date prévue</th>
                            <th>État</th>
                            <th>Appareil</th>
                            <th>Client</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.DateDepotAppareil.ToShortDateString()</td>
                                <td>@item.DatePrevueRep.ToShortDateString()</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(item.Etat)">
                                        @item.Etat
                                    </span>
                                </td>
                                <td>@item.Appareil?.Name</td>
                                <td>@item.Client?.Nom</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "En attente" => "bg-secondary",
            "En cours" => "bg-primary",
            "Terminée" => "bg-success",
            "Annulée" => "bg-danger",
            _ => "bg-warning text-dark"
        };
    }
}
