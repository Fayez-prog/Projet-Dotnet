@model Gestion_Clientele.Models.Client

@{
    ViewData["Title"] = "Supprimer Client";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />

    <h3>Êtes-vous sûr de vouloir supprimer ce client ?</h3>

    <div class="alert alert-warning mt-4">
        <h4>Client</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nom)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nom)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Adresse)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Adresse)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NumTel)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.NumTel)</dd>
        </dl>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Supprimer
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Annuler
        </a>
    </form>
</div>
