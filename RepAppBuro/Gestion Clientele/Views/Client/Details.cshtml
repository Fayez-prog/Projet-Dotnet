@model Gestion_Clientele.Models.Client

@{
    ViewData["Title"] = "Détails du Client";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nom)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Nom)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Adresse)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Adresse)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NumTel)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.NumTel)</dd>
    </dl>

    <!-- Section pour les appareils -->
    @if (Model.Appareils != null && Model.Appareils.Any())
    {
        <div class="mt-4">
            <h5>Appareils effectuées</h5>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Marque</th>
                        <th>Modele</th>
                        <th>NumeroSerie</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appareil in Model.Appareils)
                    {
                        <tr>
                            <td>@appareil.Name</td>
                            <td>@appareil.Marque</td>
                            <td>@appareil.Modele</td>
                            <td>@appareil.NumeroSerie.ToString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4">
            Aucune appareil enregistrée pour cette demande.
        </div>
    }

    <!-- Section pour les demandes reparations -->
    @if (Model.DemandesReparation != null && Model.DemandesReparation.Any())
    {
        <div class="mt-4">
            <h5>Demandes Reparations effectuées</h5>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>DateDepotAppareil</th>
                        <th>DatePrevueRep</th>
                        <th>Etat</th>
                        <th>SymptomesPanne</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var demande in Model.DemandesReparation)
                    {
                        <tr>
                            <td>@demande.DateDepotAppareil.ToShortDateString()</td>
                            <td>@demande.DatePrevueRep.ToShortDateString()</td>
                            <td>@demande.Etat</td>
                            <td>@demande.SymptomesPanne</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4">
            Aucune réparation enregistrée pour cette demande.
        </div>
    }

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Modifier
        </a>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
    </div>
</div>
