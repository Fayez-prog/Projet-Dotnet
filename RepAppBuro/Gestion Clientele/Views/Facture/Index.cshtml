@model IEnumerable<Gestion_Clientele.Models.Facture>

@{
    ViewData["Title"] = "Liste des Factures";
}

<h1>Liste des Factures</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Créer une nouvelle facture</a>
</p>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Numero)</th>
            <th>@Html.DisplayNameFor(model => model.Date)</th>
            <th>@Html.DisplayNameFor(model => model.MontantTotal)</th>
            <th>Réparation associée</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Numero)</td>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td>@Html.DisplayFor(modelItem => item.MontantTotal)</td>
                <td>@(item.Reparation?.Id.ToString() ?? "Non associée")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Détails</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Supprimer</a>
                    <a asp-action="GeneratePdf" asp-route-id="@item.Id" class="btn btn-secondary">PDF</a>
                </td>
            </tr>
        }
    </tbody>
</table>