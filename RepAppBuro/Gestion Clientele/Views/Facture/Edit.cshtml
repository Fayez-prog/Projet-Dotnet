@model Gestion_Clientele.Models.Facture

@{
    ViewData["Title"] = "Modifier la Facture";
}

<h1>Modifier la Facture</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MontantTotal" class="control-label"></label>
                <input asp-for="MontantTotal" class="form-control" />
                <span asp-validation-for="MontantTotal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReparationId" class="control-label">Réparation</label>
                <select asp-for="ReparationId" class="form-control" asp-items="ViewBag.Reparations">
                    <option value="">-- Sélectionner une réparation --</option>
                </select>
                <span asp-validation-for="ReparationId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Annuler</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}