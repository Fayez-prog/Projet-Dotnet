@model IEnumerable<Gestion_Clientele.Models.Reparation>

@{
    ViewData["Title"] = "Liste des Réparations";
}

<h1>Liste des Réparations</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Créer une nouvelle réparation</a>
</p>
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.DateRep)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.TarifMO)</th>
            <th>@Html.DisplayNameFor(model => model.TempsMO)</th>
            <th>@Html.DisplayNameFor(model => model.DemandeReparationId)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.DateRep)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.TarifMO)</td>
                <td>@Html.DisplayFor(modelItem => item.TempsMO)</td>
                <td>@Html.DisplayFor(modelItem => item.DemandeReparationId)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Détails</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Supprimer</a>
                    <a asp-action="GenerateFacture" asp-route-id="@item.Id" class="btn btn-success">Générer Facture</a>
                </td>
            </tr>
        }
    </tbody>
</table>
