@model Appareil

<h1>Modifier l'appareil</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Marque" class="control-label"></label>
        <input asp-for="Marque" class="form-control" />
        <span asp-validation-for="Marque" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Modele" class="control-label"></label>
        <input asp-for="Modele" class="form-control" />
        <span asp-validation-for="Modele" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumeroSerie" class="control-label"></label>
        <input asp-for="NumeroSerie" class="form-control" />
        <span asp-validation-for="NumeroSerie" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClientId" class="control-label">Client</label>
        <select asp-for="ClientId" class="form-control" asp-items="ViewBag.Clients">
            <option value="">-- Sélectionner un client --</option>
        </select>
        <span asp-validation-for="ClientId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Enregistrer" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Retour</a>
    </div>
</form>