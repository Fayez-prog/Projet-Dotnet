@model IEnumerable<Gestion_Clientele.Models.PieceRecharge>

@{
    ViewData["Title"] = "Liste des Pièces de Recharge";
}

<h1>Liste des Pièces de Recharge</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Ajouter une nouvelle pièce</a>
    <a asp-action="LowStock" class="btn btn-warning">Pièces en stock faible</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Code</th>
            <th>Nom</th>
            <th>Type</th>
            <th>Quantité</th>
            <th>Prix HT</th>
            <th>Prix TTC</th>
            <th>Prix AChat</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Code)</td>
                <td>@Html.DisplayFor(modelItem => item.Nom)</td>
                <td>@Html.DisplayFor(modelItem => item.TypePiece.Type)</td>
                <td class="@(item.Quantite <= 5 ? "text-danger fw-bold" : "")">@Html.DisplayFor(modelItem => item.Quantite)</td>
                <td>@Html.DisplayFor(modelItem => item.PrixHT)</td>
                <td>@Html.DisplayFor(modelItem => item.PrixTTC)</td>
                <td>@Html.DisplayFor(modelItem => item.PrixAChat)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Modifier</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Détails</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Supprimer</a>
                    <a asp-action="Restock" asp-route-id="@item.Id" class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#restockModal-@item.Id">
                        Réappro.
                    </a>

                    <!-- Restock Modal -->
                    <div class="modal fade" id="restockModal-@item.Id" tabindex="-1" aria-labelledby="restockModalLabel-@item.Id" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="restockModalLabel-@item.Id">Réapprovisionner @item.Nom</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <form asp-action="Restock" method="post">
                                    <div class="modal-body">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <div class="form-group">
                                            <label for="quantity-@item.Id" class="control-label">Quantité à ajouter</label>
                                            <input type="number" id="quantity-@item.Id" name="quantity" class="form-control" min="1" value="1" />
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                        <button type="submit" class="btn btn-primary">Confirmer</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
