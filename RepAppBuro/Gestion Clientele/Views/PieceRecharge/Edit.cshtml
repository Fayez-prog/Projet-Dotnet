@model Gestion_Clientele.Models.PieceRecharge

@{
    ViewData["Title"] = "Modifier une pièce de recharge";
}

<h1>Modifier une pièce de recharge</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypePieceId" class="control-label">Type de pièce</label>
                <select asp-for="TypePieceId" class="form-control" asp-items="ViewBag.TypePieces">
                    <option value="">-- Sélectionner un type --</option>
                </select>
                <span asp-validation-for="TypePieceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantite" class="control-label"></label>
                <input asp-for="Quantite" class="form-control" min="0" />
                <span asp-validation-for="Quantite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrixHT" class="control-label"></label>
                <input asp-for="PrixHT" class="form-control" min="0" step="0.01" />
                <span asp-validation-for="PrixHT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrixTTC" class="control-label"></label>
                <input asp-for="PrixTTC" class="form-control" min="0" step="0.01" />
                <span asp-validation-for="PrixTTC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrixAChat" class="control-label"></label>
                <input asp-for="PrixAChat" class="form-control" min="0" step="0.01" />
                <span asp-validation-for="PrixAChat" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Annuler</a>
            </div>
        </form>
    </div>
</div>
