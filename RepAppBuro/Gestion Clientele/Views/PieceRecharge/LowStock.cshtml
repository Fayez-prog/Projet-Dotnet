@model IEnumerable<Gestion_Clientele.Models.PieceRecharge>

@{
    ViewData["Title"] = "Pièces en Stock Faible";
}

<h1 class="text-warning">Pièces en Stock Faible</h1>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Code</th>
            <th>Nom</th>
            <th>Type</th>
            <th>Quantité</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Code)</td>
                <td>@Html.DisplayFor(modelItem => item.Nom)</td>
                <td>@Html.DisplayFor(modelItem => item.TypePiece.Type)</td>
                <td class="text-danger fw-bold">@Html.DisplayFor(modelItem => item.Quantite)</td>
                <td>
                    <a asp-action="Restock" asp-route-id="@item.Id" class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#restockModal-@item.Id">
                        Réapprovisionner
                    </a>

                    <!-- Restock Modal (same as in Index view) -->
                    <div class="modal fade" id="restockModal-@item.Id" tabindex="-1" aria-labelledby="restockModalLabel-@item.Id" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="restockModalLabel-@item.Id">Réapprovisionner @item.Nom</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <form asp-action="Restock" method="post">
                                    <div class="modal-body">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <div class="form-group">
                                            <label for="quantity-@item.Id" class="control-label">Quantité à ajouter</label>
                                            <input type="number" id="quantity-@item.Id" name="quantity" class="form-control" min="1" value="1" />
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                        <button type="submit" class="btn btn-primary">Confirmer</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" class="btn btn-secondary">Retour à la liste complète</a>
</div>
