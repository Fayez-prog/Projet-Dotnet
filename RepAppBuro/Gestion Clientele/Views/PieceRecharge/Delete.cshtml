@model Gestion_Clientele.Models.PieceRecharge

@{
    ViewData["Title"] = "Supprimer une pièce";
}

<h1>Supprimer une pièce</h1>

<h3>Êtes-vous sûr de vouloir supprimer cette pièce ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class="col-sm-3">
            Type de pièce
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.TypePiece.Type)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Annuler</a>
    </form>
</div>
